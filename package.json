{
  "name": "cms-merchant",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "start": "nodemon index.js --exec babel-node",
    "lint": "eslint **/*.js",
    "test": "NODE_ENV=test nyc ava",
    "posttest": "nyc report --reporter=lcov",
    "validate": "npm run lint && npm t"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "6.8.0",
    "babel-polyfill": "6.8.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.8.0",
    "bookshelf": "0.9.4",
    "co": "4.6.0",
    "co-views": "2.1.0",
    "knex": "0.11.3",
    "koa": "2.0.0",
    "koa-bodyparser": "3.1.0",
    "koa-bunyan-logger": "2.0.0-pre1",
    "koa-compress": "2.0.0",
    "koa-helmet": "2.0.0-alpha.1",
    "koa-logger": "2.0.0",
    "koa-mount": "2.0.0",
    "koa-passport": "2.1.1",
    "koa-router": "7.0.1",
    "koa-static": "3.0.0",
    "pg": "4.5.5"
  },
  "devDependencies": {
    "ava": "0.14.0",
    "commitizen": "2.8.1",
    "cz-conventional-changelog": "1.1.6",
    "eslint": "2.9.0",
    "eslint-config-xo": "0.14.1",
    "eslint-plugin-xo": "0.4.1",
    "ghooks": "1.2.1",
    "nodemon": "1.9.2",
    "nyc": "6.4.4",
    "validate-commit-msg": "2.6.1"
  },
  "ava": {
    "files": [
      "tests/unit/**/*.js"
    ],
    "source": [
      "models/**/*.js",
      "routes/**/*.js"
    ],
    "failFast": true,
    "tap": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec \"npm run validate\"",
      "commit-msg": "opt --in commit-msg --exec validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message\n",
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "custom"
      ],
      "warnOnFail": false
    }
  }
}
